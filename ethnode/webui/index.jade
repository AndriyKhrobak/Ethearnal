    body

        include mixins/modals/shoutout-modal
        include mixins/modals/education-modal
        include mixins/modals/job-modal
        include mixins/modals/story-modal
        include mixins/modals/accomplishment-modal
        include mixins/modals/avatar-ui-modal
        include mixins/modals/modal-invite
        include mixins/modals/timeline-modal
        include mixins/modals/timeline-modal-edit

        // Header includes "Aspire" logo, search option, messages, alerts icons and profile image and it's name.
        // There's 2 collapse divs, one for mobile screens and another one for everything higher than mobile screens.
        header.main-header

            .container
                nav.navbar.navbar-default

                    // Navigation header - logo.
                    .navbar-header

                        .form-group.visible-xs
                            a(href=""): i.icon-search
                            input.form-control(text="text", placeholder="Search Ethearnal")

                        .button
                            button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target="#navigation", aria-expanded="false")
                                span
                                span
                                span
                                span


                        a.navbar-brand(href='').hidden-xs Ethearnal BETA

                    // Navbar items ONLY for larger than mobile screens.
                    .collapse.navbar-collapse#navigation

                        form.navbar-form.navbar-left
                            .form-group
                                a(href=""): i.icon-search
                                input.form-control(text="text", placeholder="Search Ethearnal")

                        ul.nav.navbar-nav.navbar-right.hidden-xs
                            li.asset#comment-navbar
                                a(href="")
                                    i.icon-comment
                                    .round-number
                                        span 1

                            li.asset#alert-navbar
                                a(href="")
                                    i.material-icons polymer
                                    .round-number
                                        span 3

                            li.profile(data-toggle="dropdown")
                                img.profile-picture(src="images/dobri.png", alt="Dobri")
                                span Dobri

                            ul.dropdown-menu(aria-labelledby="dLabel")
                                li.settings
                                    a(href="") Settings
                                        i.material-icons settings

                                li.logout
                                    a(href="") Logout
                                        i.material-icons power_settings_new

                        ul.nav.navbar-nav.visible-xs
                            li
                                a(href="") Dobri
                                    img.profile-picture(src="images/dobri.png", alt="Dobri")
                            li
                                a(href='#') Messages
                                    .round-number
                                        span 1
                            li
                                a(href='#') Alerts
                                    .round-number
                                        span 1

                            li.settings-mobile
                                a(href='#') Settings
                                    i.material-icons settings

                            li.logout-mobile
                                a(href='#') Logout
                                    i.material-icons power_settings_new


        // Background image section, including a button with lock and unlock icons.
        section.background-image
            .button-prev: i.material-icons keyboard_arrow_left
            .button-next: i.material-icons keyboard_arrow_right
            .items
                .item: img(src="images/background-road-different.png", alt="Building")
                .item: img(src="images/background-buildings.png", alt="Building")
                .item: img(src="images/background-downtown.png", alt="Building")

        // This section is for your whole profile, including left and right sides, profile information and etc.
        section.documentation

            .container

                .profile-information-fixed.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden

                // Profile information including profile image, current work, current city and state, skills and etc.
                .profile-information-before-fixed.col-lg-4.col-md-4.col-sm-12.col-xs-12

                    include mixins/profile-card



                // Profile information including profile image, current work, current city and state, skills and etc.
                .profile-information-after-fixed.col-lg-12.col-md-12.col-sm-12.col-xs-12.hidden

                    .container-fluid

                        .container.col-lg-4.col-md-4.col-sm-12.col-xs-12

                            include mixins/profile-card


                // Profile documentation including jobs and education, stories, shout-outs and questions with answers
                .col-lg-8.col-md-8.col-sm-12.col-xs-12.profile-documentation-full

                    .profile-documentation.col-lg-12.col-md-12.col-sm-12.col-xs-12

                        ul.nav.nav-tabs(role="tablist")
                            li.timeline-li(role="presentation"): a(href="#timeline", aria-controls="jobs", role="tab", data-toggle="tab") Timeline
                            li.active.jobs-li(role="presentation"): a(href="#jobs", aria-controls="jobs", role="tab", data-toggle="tab") Jobs & Education

                        .plusIcon.dropdown-toggle(data-toggle="dropdown")
                            i.material-icons add

                        ul.dropdown-menu(aria-labelledby="dLabel")
                            li.add-job: a(href="", data-toggle="modal", data-target="#jobModal") Add Job
                            li.add-education: a(href="", data-toggle="modal", data-target="#educationModal") Add Education
                            li.add-story: a(href="", data-toggle="modal", data-target="#storyModal") Add Story
                            li.divider
                            li.invite-someone: a(href="", data-toggle="modal", data-target="#inviteModal") Invite someone to Aspire

                        .shoutoutIcon(data-toggle="modal", data-target="#shoutoutModal")
                            i.announcement.icon


                        // All the information about above listed tabs.
                        .tab-content.col-lg-12.col-md-12.col-sm-12.col-xs-12

                            // Timeline TAB
                            .tab-pane.fade#timeline.list-block.col-lg-12.col-md-12.col-sm-12.col-xs-12(role="tabpanel")

                                .timeline-post.input-timeline.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                    include mixins/timeline/post-input

                                ul
                                    li.swipeout
                                        .timeline-post.swipeout-content.item-content.col-lg-12.col-md-12.col-sm-12.col-xs-12(data-toggle="modal", data-target="#timelineModal")
                                            include mixins/timeline/default-post

                                        .swipeout-actions-left
                                        .swipeout-actions-right

                                    li.swipeout
                                        .timeline-post.swipeout-content.item-content.col-lg-12.col-md-12.col-sm-12.col-xs-12(data-toggle="modal", data-target="#timelineModal")
                                            include mixins/timeline/default-post

                                        .swipeout-actions-left
                                        .swipeout-actions-right



                            // Jobs & Education TAB
                            .tab-pane.fade.in.active#jobs.col-lg-12.col-md-12.col-sm-12.col-xs-12(role="tabpanel")

                                // JOBS
                                .jobs-container
                                    .job.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/jobs/default-job

                                    .job.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/jobs/job-aspire

                                    .job.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/jobs/job-kaiser

                                    .job.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/jobs/jobs-main-information

                                    .jobs-see.see-more.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        p + See more jobs

                                    .jobs-see.see-less.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        p - See less jobs


                                // EDUCATION
                                .education-container
                                    .education.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/educations/education-policy

                                    .education.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/educations/education-electrical

                                    .education.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/educations/education-main-information

                                    .education.life-experience.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        include mixins/educations/education-main-information

                                    .educations-see.see-more.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        p + See more education

                                    .educations-see.see-less.col-lg-12.col-md-12.col-sm-12.col-xs-12
                                        p - See less education


