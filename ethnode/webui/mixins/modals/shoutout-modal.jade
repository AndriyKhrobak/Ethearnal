.modal.fade#shoutoutModal(tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
    .modal-dialog.modal-lg(role="document")
        .modal-content.col-lg-12.col-md-12.col-sm-12.col-xs-12

            .modal-header.col-lg-12.col-md-12.col-sm-12.col-xs-12
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;

                h3 Add new shout-out

            .modal-body.col-lg-12.col-md-12.col-sm-12.col-xs-12

                h4.publish-modal-description Woohoo, congratulations!
                h3.publish-modal-heading Your shout-out has been published!

                .modal-inputs.col-lg-12.col-md-12.col-sm-12.col-xs-12
                    input.title(text="text", placeholder="Shout-out Topic")

                    .ui.fluid.search.selection.dropdown.col-lg-12.col-md-12.col-sm-12.col-xs-12
                        input(type="hidden", name="user")
                        i.dropdown.icon
                        .default.text Related to a particular job?

                        .menu

                            .ui.icon.search.input
                                .search.icon
                                input.search-input(type="text", placeholder="Search company or add your own...")

                            .divider

                            .header: i.building.icon: span Available companies
                            .item(data-value="pkfrontend")
                                img.ui.avatar.image(src="images/paypal.jpg", alt="Profile")
                                span Paulius Kasiuba's Front End Development

                            .item(data-value="sharadvenkatfreelance")
                                img.ui.avatar.image(src="images/paypal.jpg", alt="Profile")
                                span Sharad Venkat's Freelancing company

                    textarea.description(rows="3", placeholder="Shout-out Text")
                    p.symbols <span class="symbols-zero">0</span> / 400

            .modal-footer.col-lg-12.col-md-12.col-sm-12.col-xs-12
                button.btn.btn-default.close-modal(type="button", data-dismiss="modal") Close
                button.btn.btn-default.save-draft(type="button") Save as Draft
                button.btn.btn-default.publish(type="button") Publish